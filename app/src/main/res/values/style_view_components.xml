<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    Text views-->
    <style name="ToolbarTitleTextAppearance" parent="MediumText.Large">
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="RegularText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontFamily">@font/regular_heebo</item>
        <item name="android:fontFamily">@font/regular_heebo</item>
    </style>

    <style name="RegularText.Small" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="RegularText.Regular" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="RegularText.Medium" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="RegularText.MediumLarge" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_medium_large</item>
    </style>

    <style name="RegularText.Large" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="RegularText.ExtraLarge" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <style name="HiddenText" parent="RegularText">
        <item name="android:textSize">@dimen/zero</item>
    </style>


    <style name="MediumText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontFamily">@font/medium_heebo</item>
        <item name="android:fontFamily">@font/medium_heebo</item>
    </style>

    <style name="MediumText.Small" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MediumText.Regular" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="MediumText.Medium" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="MediumText.MediumLarge" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_medium_large</item>
    </style>

    <style name="MediumText.Large" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="MediumText.ExtraLarge" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>


    <!--    Progress bar-->
    <style name="ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="PrimaryProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>